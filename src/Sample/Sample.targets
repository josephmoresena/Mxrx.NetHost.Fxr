<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <Import Project="..\Frameworks.targets"/>

    <PropertyGroup>
        <TargetFrameworks Condition="'$(IsLauncher)' != 'true'">net5.0;net6.0;net7.0</TargetFrameworks>
        <EnableDynamicLoading Condition="'$(IsLauncher)' != 'true'">true</EnableDynamicLoading>
        <Platform Condition="'$(IsLauncher)' != 'true'">Any CPU</Platform>
        <CheckEolTargetFramework>false</CheckEolTargetFramework>
        <AssemblyName>$(AssemblyName).$(TargetFramework)</AssemblyName>
        <PublishDir Condition="'$(PublishDir)' == ''">..\..\..\Artifacts\</PublishDir>
    </PropertyGroup>

    <PropertyGroup Condition="'$(IlcDisableReflection)' == 'true'">
        <AssemblyName>$(AssemblyName).RFM</AssemblyName>
    </PropertyGroup>

</Project>
