<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <ImplicitUsings>enable</ImplicitUsings>
        <IsLauncher>true</IsLauncher>
        <PublishAot>true</PublishAot>
        <EnableAotAnalyzer>true</EnableAotAnalyzer>
        <IsAotCompatible>true</IsAotCompatible>
        <CopyOutputSymbolsToPublishDirectory>false</CopyOutputSymbolsToPublishDirectory>
        <RootNamespace>Mxrxm.NetHost.Sample.Launcher</RootNamespace>
    </PropertyGroup>

    <Import Project="..\Sample.targets"/>

    <PropertyGroup Condition="$([MSBuild]::IsOSPlatform('FREEBSD')) Or '$(RuntimeIdentifier)' == 'linux-arm' Or '$(RuntimeIdentifier)' == 'win-x86'">
        <TargetFrameworks>$(Null)</TargetFrameworks>
        <TargetFramework>net9.0</TargetFramework>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\Package\Mxrx.NetHost.Fxr\Mxrx.NetHost.Fxr.csproj"/>
    </ItemGroup>

</Project>
